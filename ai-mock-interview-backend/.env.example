# Database Configuration
# For development, use SQLite
DATABASE_URL=sqlite:///./interview_platform.db

# For production, use PostgreSQL
# DATABASE_URL=postgresql://username:password@localhost:5432/interview_db

# VAPI Configuration
VAPI_API_KEY=
VAPI_WEBHOOK_SECRET=
# Backend URL (for VAPI webhooks)
BACKEND_URL=http://localhost:8000

# OpenAI (if using directly for additional features)
OPENAI_API_KEY=your_openai_key_here

# Application Settings
DEBUG=True
SECRET_KEY=your_secret_key_for_jwt_tokens_here

# CORS Settings (specify exact origins in production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://your-frontend-domain.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/application.log

# ML Model Settings
ML_MODEL_PATH=models/interview_classifier.pkl
TRAINING_DATA_PATH=data/training_data.csv

# Interview Settings
MAX_INTERVIEW_DURATION=120  # minutes
MIN_INTERVIEW_DURATION=10   # minutes
DEFAULT_QUESTIONS_PER_SESSION=5